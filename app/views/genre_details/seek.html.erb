<div class="user_textarea">
  <div class="container">
    <div class="flash">
      <p class="text-center">
        <span class="text-primary"><%= notice %></span>
        <span class="text-danger"><%= alert %></span>
      </p>
    </div>

    <h3 class="text-center pt-5 text-break">全ガイド検索結果</h3>

    <%= form_with url: genre_details_seek_path, method: :get, local: true do |f| %>
      <div class="form-group pt-5 text-center row">
        <%= f.text_field :content, placeholder: "キーワードを入力", value: @content, class: "offset-md-4 col-md-4 form-control w-25" %>
        <%= f.button :type => "submit", class: "btn btn-info", style: 'border-style: none;' do %>
          <i class='fa fa-search'></i>
        <% end %>
      </div>
    <% end %>

    <% unless @genre_details.blank? %>
      <table class="table table-hover table-inverse mt-5">
        <thead>
          <tr class="table-active">
            <th>更新日時</th>
            <th>タイトル</th>
            <th>ガイド内容</th>
          </tr>
        </thead>
        <tbody>
          <% @genre_details.each do |genre_detail| %>
            <tr>
              <td><%= genre_detail.update_time %></td>
              <td>
                <%= link_to genre_detail.short_title, genre_genre_detail_path(genre_detail.genre_id, genre_detail.id) %>
              </td>
              <td><%= genre_detail.short_body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate @genre_details %>
    <% else %>
      <p class="text-center pt-5">該当項目が見つかりませんでした。</p>
    <% end %>
    <%= render 'layouts/arrow' %>
  </div>
</div>
