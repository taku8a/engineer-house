<div class="user_textarea">
  <div class="container">
    <div class="flash">
      <p class="text-center">
        <span class="text-primary"><%= notice %></span>
        <span class="text-danger"><%= alert %></span>
      </p>
    </div>
    <h3 class="text-center pt-5 mb-5">新規登録</h3>

    <%= form_with model: @user, url: user_registration_path, local: true do |f| %>

      <div class="bg-light text-danger"><%= render "users/shared/error_messages", resource: resource %></div>

      <div class="form-group pt-5 text-center row">
        <%= f.label :name, "ニックネーム", class: 'col-md-3 offset-md-3 col-form-label' %>
        <%= f.text_field :name, autofocus: true, autocomplete: "nickname", placeholder: "taro", class: "form-control w-25" %>
      </div>

      <div class="form-group pt-3 text-center row" style="height: 500px;">
        <%= f.label :introduction, "自己紹介", class: 'col-md-3 offset-md-3 col-form-label' %>
        <%= f.text_area :introduction, autocomplete: "nickname", placeholder: "好きな言語はRubyです。", class: "form-control w-25" %>
      </div>

      <div class="form-group pt-3 text-center row">
        <%= f.label :profile_image, "プロフィール画像", class: 'col-md-3 offset-md-3 col-form-label' %>
        <%= f.attachment_field :profile_image, class: "form-control-file w-50" %>
      </div>

      <div class="form-group pt-3 text-center row">
        <%= f.label :email, "メールアドレス", class: 'col-md-3 offset-md-3 col-form-label' %>
        <%= f.email_field :email, autocomplete: "email", placeholder: "sample@example.com", class: "form-control w-25" %>
      </div>

      <div class="form-group pt-3 text-center row">
        <%= f.label :password, "パスワード(６文字以上)", class: 'col-md-3 offset-md-3 col-form-label' %>
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control w-25" %>
      </div>

      <div class="form-group pt-3 text-center row">
        <%= f.label :password_confirmation, "パスワード(確認用)", class: 'col-md-3 offset-md-3 col-form-label' %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control w-25" %>
      </div>

      <div class="form-group pt-5 text-center row">
        <%= f.submit "新規登録", class: 'btn btn-success form-control w-25 offset-md-6' %>
      </div>
      <div class="form-group pt-5 text-center row">
        <h5 class=" w-25 offset-md-6">既に登録済みの方 ➡ <%= render "users/shared/links" %></h5>
      </div>
    <% end %>
    <%= render "layouts/button" %>
  </div>
</div>