<h3 class="text-center pt-5 mb-5">マイページ編集</h3>

<%= form_with model: current_user, url: update_users_path, method: :patch, local: true do |f| %>

  <div class="bg-light text-danger"><%= render "users/shared/error_messages", resource: f.object %></div>

  <div class="form-group pt-5 text-center row">
    <%= f.label :name, "ニックネーム", class: 'col-md-3 offset-md-3 col-form-label' %>
    <%= f.text_field :name, autofocus: true, autocomplete: "nickname", placeholder: "taro", class: "form-control w-25" %>
  </div>

  <div class="form-group pt-3 text-center row" style="height: 500px;">
    <%= f.label :introduction, "自己紹介", class: 'col-md-3 offset-md-3 col-form-label' %>
    <%= f.text_area :introduction, autocomplete: "nickname", placeholder: "好きな言語はRubyです。", class: "form-control w-25" %>
  </div>

  <div class="form-group pt-3 text-center row">
    <%= f.label :profile_image, "プロフィール画像", class: 'col-md-3 offset-md-3 col-form-label' %>
    <%= f.attachment_field :profile_image, class: "form-control-file w-50" %>
  </div>

  <div class="form-group pt-3 text-center row">
    <%= f.label :email, "メールアドレス", class: 'col-md-3 offset-md-3 col-form-label' %>
    <%= f.email_field :email, autocomplete: "email", placeholder: "sample@example.com", class: "form-control w-25" %>
  </div>

  <div class="form-group pt-5 text-center row">
    <%= f.submit "アップデート", class: 'btn btn-success form-control w-25 offset-md-6 mb-5' %>
    <%= link_to "退会する", unsubscribe_users_path, class: 'btn btn-danger form-control w-25 offset-md-6' %>
  </div>

<% end %>