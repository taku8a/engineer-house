<div class="user_textarea">
  <div class="container">
    <div class="flash">
      <p class="text-center">
        <span class="text-primary"><%= notice %></span>
        <span class="text-danger"><%= alert %></span>
      </p>
    </div>
    <h3 class="text-center pt-5 mb-5">ログイン</h3>

    <%= form_with model: @user, url: user_session_path, local: true do |f| %>

      <div class="bg-light text-danger">
        <div id="error_explanation">
          <h4 class="alert"><%= alert %></h4>
        </div>
      </div>

      <div class="form-group pt-5 text-center row">
        <%= f.label :email, "メールアドレス", class: 'col-md-3 offset-md-3 col-form-label' %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com", id: "email", class: "form-control w-25 #{"is-invalid" if flash[:alert]}" %>
      </div>

      <div class="form-group pt-3 text-center row">
        <%= f.label :password, "パスワード(６文字以上)", class: 'col-md-3 offset-md-3 col-form-label' %>
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control w-25 #{"is-invalid" if flash[:alert]}" %>
      </div>

      <div class="form-group pt-5 text-center row">
        <%= f.submit "ログイン", id: "login", class: 'btn btn-success form-control w-25 offset-md-6' %>
      </div>
      <div class="form-group pt-5 text-center row">
        <h5 class=" w-40 offset-md-6">会員登録がお済みでない方 ➡  <%= render "users/shared/links" %></h5>
      </div>
    <% end %>
  </div>
</div>
