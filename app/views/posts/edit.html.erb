<div class="flash">
  <p class="text-center">
    <span class="text-primary"><%= notice %></span>
    <span class="text-danger"><%= alert %></span>
  </p>
</div>

<h3 class="text-center pt-5 text-break">投稿編集</h3>
<%= form_with model: @post, method: :patch, local: true do |f| %>

  <div class="bg-light text-danger"><%= render "users/shared/error_messages", resource: f.object %></div>

  <div class="form-group pt-5 row">
    <%= f.label :genre, 'ジャンル', class: 'col-md-3 offset-md-2 col-form-label text-center' %>
    <%= f.collection_check_boxes(:genre_ids, @genres, :id, :name) do |genre| %>
      <%= genre.label class: 'col-form-label col-md-6 offset-md-5 text-break' do %>
        <%= genre.check_box %>
        <%= link_to genre.text.truncate(20), genre_path(genre.object.id) %>
      <% end %>
    <% end %>
    <div class="offset-md-5 col-form-label text-break">
      <%= paginate @genres, :param_name => "genre_page" %>
    </div>
  </div>

  <div class="form-group pt-5 row">
    <%= f.label :genre_detail, '参考ガイド', class: 'col-md-3 offset-md-2 col-form-label text-center' %>
    <%= f.collection_check_boxes(:genre_detail_ids, @genre_details, :id, :title) do |genre_detail| %>
      <%= genre_detail.label class: 'col-form-label col-md-6 offset-md-5 text-break' do %>
        <%= genre_detail.check_box %>
        <%= link_to genre_detail.text.truncate(20), genre_genre_detail_path(genre_detail.object.genre_id, genre_detail.object.id) %>
      <% end %>
    <% end %>
    <div class="offset-md-5 col-form-label text-break">
      <%= paginate @genre_details, :param_name => "genre_detail_page" %>
    </div>
  </div>

  <div class="form-group pt-5 text-center row">
    <%= f.label :title, "タイトル", class: 'col-md-3 offset-md-2 col-form-label' %>
    <%= f.text_field :title, class: 'form-control w-25' %>
  </div>

  <div class="form-group pt-3 text-center row" style="height: 500px;">
    <%= f.label :body, "投稿", class: 'col-md-3 offset-md-2 col-form-label' %>
    <%= f.text_area :body, class: 'form-control w-50' %>
  </div>

  <%= f.hidden_field :user_id, :value => current_user.id %>

  <div class="form-group pt-5 text-center row">
    <%= f.submit "アップデート", class: 'btn btn-success form-control w-25 offset-md-5' %>
  </div>

<% end %>