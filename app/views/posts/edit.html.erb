<h3 class="text-center pt-5"><%= @post.name %><br>編集</h3>
<%= form_with model: @post, method: :patch, local: true do |f| %>

  <div class="bg-light text-danger"><%= render "users/shared/error_messages", resource: f.object %></div>

  <div class="form-group pt-5 text-center row">
    <%= f.label :name, "タイトル", class: 'col-md-3 offset-md-3 col-form-label' %>
    <%= f.text_field :name, autofocus: true, class: 'form-control w-25' %>
  </div>

  <div class="form-group pt-3 text-center row" style="height: 500px;">
    <%= f.label :body, "投稿", class: 'col-md-3 offset-md-3 col-form-label' %>
    <%= f.text_area :body, class: 'form-control w-50' %>
  </div>

  <div class="form-group pt-5 text-center row">
    <%= f.submit "アップデート", class: 'btn btn-success form-control w-25 offset-md-6' %>
  </div>

<% end %>