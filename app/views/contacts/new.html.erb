<div class="container">
  <div class="flash mt-0 mb-5">
    <p class="text-center">
      <span class="text-primary"><%= notice %></span>
      <span class="text-danger"><%= alert %></span>
    </p>
  </div>

  <div class="flash4 mt-5 pt-3">
    <h3 class="text-center pt-5 mb-5">お問い合わせフォーム</h3>
    <%= form_with model: @contact, url: confirm_contacts_path, method: :post, local: true do |f| %>

      <div class="bg-light text-danger"><%= render "users/shared/error_messages", resource: f.object %></div>

      <div class="form-group pt-5 text-center row">
        <%= f.label :name, "タイトル", class: 'col-md-3 offset-md-2 col-form-label' %>
        <%= f.text_field :name, autofocus: true, placeholder: "サイトについて", class: "form-control w-25" %>
      </div>

      <div class="form-group pt-3 text-center row" style="height: 500px;">
        <%= f.label :content, "内容", class: 'col-md-3 offset-md-2 col-form-label' %>
        <%= f.text_area :content, placeholder: "立ち上げた動機を教えてください。", class: "form-control w-50" %>
      </div>

      <div class="form-group pt-3 text-center row">
        <%= f.label :email, "メールアドレス", class: 'col-md-3 offset-md-2 col-form-label' %>
        <%= f.email_field :email, autocomplete: "email", placeholder: "sample@example.com", class: "form-control w-25" %>
      </div>

      <div class="form-group pt-5 text-center row">
        <%= f.submit "確認画面へ進む", class: 'btn btn-success form-control w-25 offset-md-5' %>
      </div>

    <% end %>
  </div>
  <%= render 'layouts/arrow' %>
</div>
