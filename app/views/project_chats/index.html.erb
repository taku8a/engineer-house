<h3><%= @project.name %></h3>

  <% @project_chats.each do |chat| %>
      <% if chat.user_id == current_user.id %>
        <p class="text-right m-0"><%= safe_join(chat.chat.split("\n"),tag(:br)) %></p>
        <p class="text-right mb-5"><%= chat.created_at.strftime("%Y/%m/%d %H:%M") %>  <%= current_user.name %></p>
      <% else %>
        <p class="text-left m-0"><%= safe_join(chat.chat.split("\n"),tag(:br)) %></p>
        <p class="text- mb-5"><%= chat.created_at.strftime("%Y/%m/%d %H:%M") %>  <%= chat.user.name %></p>
      <% end %>
  <% end %>
<div class="row justify-content-center">
  <div class="col-6">
    <%= form_with model: @project_chat, url: project_project_chats_path(@project), local: true do |f| %>
      <%= f.text_area :chat, class: "form-control", size: "15×10" %>
      <%= f.hidden_field :project_id, :value => @project.id %>
      <%= f.hidden_field :user_id, :value => current_user.id %>
      <%= f.submit "送信", class: 'btn btn-success' %>
    <% end %>
  </div>
</div>
