<div id="genre_flash" class="flash text-center text-primary">
  <p class="text-center">
    <span class="text-primary"><%= notice %></span>
    <span class="text-danger"><%= alert %></span>
  </p>
</div>

<h3 class="text-center pt-5">ジャンル検索結果・追加</h3>

<p class="text-right pt-5">
  <%= form_with url: search_genres_path, method: :get, class: "form-inline navbar-form nav-link text-right", local: true do |f| %>
    <div class="input-group row">
      <%= f.text_field :content, placeholder: "キーワードを入力", value: @content, class: "offset-8 form-control w-25" %>
      <span class="input-group-append">
        <button type="submit" class="form-control btn btn-info">
          <i class="fas fa-search"></i>
        </button>
      </span>
    </div>
  <% end %>
</p>

<%= form_with model: @genre, data: { remote: true } do |f| %>

  <div class="bg-light text-danger" id="genre_error"><%= render "users/shared/error_messages", resource: @genre %></div>

  <div class="form-group pt-5 text-center row">
    <%= f.text_field :name, autofocus: true, placeholder: "ジャンル名", class: 'offset-md-4 col-md-4 form-control w-25', id: "name" %>
    <%= f.submit "新規登録", class: 'btn btn-success ml-1' %>
  </div>

<% end %>

<% unless @genres.blank? %>
  <table class='table table-hover table-inverse mt-5'>
    <thead>
      <tr class="table-active">
        <th>ジャンル</th>
        <th>投稿数</th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody id="genre">
      <%= render "index", genres: @genres %>
    </tbody>
  </table>
  <%= paginate @genres %>
<% else %>
  <p class="text-center pt-5">該当項目が見つかりませんでした。</p>
<% end %>